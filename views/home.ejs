<% arrayPosts.forEach( (post, index) => { %>
    <div class="pagina" style="border-bottom: 1px solid rgb(185, 185, 185);">
        <div class="top">
            <h1 class="font-weight-bold"><%= post.titolo %></h1>
            <a href="/elimina/:<%= post.titolo %>" class="elimina-btn">
                <img src="data:image/png;base64,">
            </a>
        </div>
        
        <p>
            <%= post.testo.substring(0,100) + " ..." %>
            <a href="/posts/:<%= post.titolo %>">Read More</a>
        </p>
    </div>
<% }) %>


